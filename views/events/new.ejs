            <input type="text" class="form-control" id="eventStartDate" name="event[startDate]">
          </div>
          <div class="form-group">
            <label for="eventEndDate">End date</label>
            <input type="text" class="form-control" id="eventEndDate" name="event[endDate]">
          </div>
          <div class="form-group">
            <label for="eventDescription">Description</label>
            <textarea name="event[description]" class="form-control" id="eventDescription"></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
      </div>
    </div>
  </div>

